@model JustInTimeCompany_MuzikantovRoman.Models.ViewModels.PlanesViewModel

@{
    ViewData["Title"] = "Show";
}

@section SideNavigation
{
    <partial name="_SideNavigationPartial" />
}

<div class="mt-3 pl-3">
    <h2>VOS HELICOPTERES</h2>
    @if (Model.PlanesStateGarage.Count > 0)
    {
        <div class="bg-primary-light mb-3">
            <h3 class="p-2">HELICOPTERE(S) AU GARAGE</h3>
            <div class="pb-3">
                @{
                    await Html.RenderPartialAsync("_PlaneBoxPartial", Model.PlanesStateGarage);
                }
            </div>
        </div>
    }
    <div class="bg-primary-light mb-3">
        <h3 class="p-2">HELICOPTERE(S) HORS GARAGE</h3>
        <div class="pb-3">
            @{
                await Html.RenderPartialAsync("_PlaneBoxPartial", Model.PlanesStateOk);
            }
        </div>
    </div>
</div>

<environment include="Development">
    <script src="~/js/scripts.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/mylib/scripts.min.js"></script>
</environment>